{
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	},
	"exclude": ["node_modules", "prisma"],
	"compilerOptions": {
		"outDir": "./out",
		"rootDir": "./src",
		"baseUrl": ".",
		// "paths": {
		// 	"@/*": ["./src/*"],
		// 	"@modules": ["./src/modules"],
		// 	"@core": ["./src/core"],
		// 	"@configs": ["./src/configs"],
		// 	"@api": ["./src/api"]
		// },
		"sourceMap": true,
		"lib": ["esnext"],
		"target": "es2016",
		"module": "commonjs",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}
